<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView001"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="#696969"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView002"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10.0px"
        android:paddingRight="10.0px"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView003"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/simple_frame"
            android:text="TextView"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView004"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/simple_frame"
            android:text="TextView"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView005"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/simple_frame"
            android:text="TextView"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView006"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/simple_frame"
            android:text="TextView"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>